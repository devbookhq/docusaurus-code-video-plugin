{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo-client",
    "rootDir": "src",
    "outDir": "lib",
    "module": "esnext",
    "target": "esnext",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "src/theme",
    "src/*.d.ts",
    "src/custom-buble.ts"
  ],
  "exclude": [
    "**/__tests__/**"
  ]
}