{
  "extends": "./tsconfig.base.json",
  "references": [
    {
      "path": "./tsconfig.client.json"
    }
  ],
  "compilerOptions": {
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "rootDir": "src",
    "outDir": "lib",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/custom-buble.ts",
    "src/theme"
  ]
}